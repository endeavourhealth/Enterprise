<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <!-- appender for console -->
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date %level [%thread] %logger{10}:%line %X{UserUuid} - %msg%n</pattern>
    </encoder>
  </appender>


  <!-- appender for log file-->
  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>EnterpriseWebServer.log</file>
    <encoder>
      <pattern>%date %level [%thread] %logger{10}:%line %X{UserUuid} - %msg%n</pattern>
    </encoder>
  </appender>


  <logger name="org.endeavour.enterprise" level="TRACE"/>
  <logger name="com.mchange" level="INFO"/>  <!--not interested in logback debug logging -->

  <root level="debug">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="FILE" />
    <!--DB appender is added programmatically-->
  </root>
</configuration>